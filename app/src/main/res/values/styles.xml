<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">#bdbdbd</item>
        <item name="colorControlActivated">#9c9c9c</item>
    </style>

    <style name="TitleText">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TitleText.Large">
        <item name="android:textSize">@dimen/_18ssp</item>
    </style>

    <style name="TitleText.Normal">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ContextText">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:drawablePadding">@dimen/_4sdp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>